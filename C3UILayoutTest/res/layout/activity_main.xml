<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="Button" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Button" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Button" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="type something" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Send" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_relative3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="relative3" />

        <Button
            android:id="@+id/btn_relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_relative3"
            android:layout_toLeftOf="@id/btn_relative3"
            android:text="relative1" />

        <Button
            android:id="@+id/btn_relative2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_relative3"
            android:layout_toRightOf="@id/btn_relative3"
            android:text="relative2" />

        <Button
            android:id="@+id/btn_relative4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_relative3"
            android:layout_toLeftOf="@id/btn_relative3"
            android:text="relative4" />

        <Button
            android:id="@+id/btn_relative5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_relative3"
            android:layout_toRightOf="@id/btn_relative3"
            android:text="relative5" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <Button
            android:id="@+id/btn_align_relative3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="relative3" />

        <Button
            android:id="@+id/btn_align_relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btn_align_relative3"
            android:layout_alignLeft="@id/btn_align_relative3"
            android:text="relative1" />

        <Button
            android:id="@+id/btn_align_relative2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/btn_align_relative3"
            android:layout_toRightOf="@id/btn_align_relative3"
            android:text="relative2" />

        <Button
            android:id="@+id/btn_align_relative4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_align_relative3"
            android:layout_alignLeft="@id/btn_align_relative3"
            android:text="relative4" />

        <Button
            android:id="@+id/btn_align_relative5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/btn_align_relative3"
            android:layout_toLeftOf="@id/btn_align_relative3"
            android:text="relative5" />
    </RelativeLayout>
</LinearLayout>